{
  "name": "@leizm/sql",
  "version": "1.9.0",
  "description": "SQL查询构造器",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "compile": "rm -rf dist && tsc",
    "test": "jest",
    "test-cov": "jest --coverage",
    "test-debug": "export DEBUG='@leizm/sql:*' && jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublish": "npm run test && npm run compile"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/leizm-sql.git"
  },
  "keywords": [
    "sql"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leizongmin/leizm-sql/issues"
  },
  "homepage": "https://github.com/leizongmin/leizm-sql#readme",
  "peerDependencies": {
    "@types/node": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/debug": "^4.1.5",
    "@types/mysql": "^2.15.6",
    "@types/node": "14.14.14",
    "@types/sqlstring": "^2.3.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "debug": "^4.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "sqlstring": "^2.3.2"
  }
}
