{
  "name": "@leizm/sql",
  "version": "1.6.1",
  "description": "SQL查询构造器",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "compile": "rm -rf dist && tsc",
    "test": "jest",
    "test-cov": "jest --coverage",
    "test-debug": "export DEBUG='@leizm/sql:*' && jest",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublish": "npm run test && npm run compile"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/leizm-sql.git"
  },
  "keywords": [
    "sql"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leizongmin/leizm-sql/issues"
  },
  "homepage": "https://github.com/leizongmin/leizm-sql#readme",
  "peerDependencies": {
    "@types/node": "^10.12.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/debug": "0.0.31",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.26",
    "@types/sqlstring": "^2.2.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "debug": "^4.1.1",
    "jest": "^23.6.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "sqlstring": "^2.3.1"
  }
}
